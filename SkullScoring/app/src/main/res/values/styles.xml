<resources>

    <style name="SKAppTheme.Widget.Snackbar" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">@dimen/marginM</item>
    </style>

    <style name="SKAppTheme.Widget.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/selector_button_background</item>
        <item name="rippleColor">#ff6659</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SKAppTheme.Widget.Button.White" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:tint">@android:color/white</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="SKAppTheme.Widget.TextInput" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/selector_text_input</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="hintTextColor">@android:color/white</item>
    </style>

    <style name="SKAppTheme.Widget.TextInput.ExposedDropdownMenu" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/selector_text_input</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="hintTextColor">@android:color/white</item>
        <item name="endIconTint">@android:color/white</item>
    </style>

    <style name="SKAppTheme.Widget.CheckBox" parent="@style/Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:buttonTint">@android:color/white</item>
    </style>

    <style name="SKAppTheme.Widget.EditText" parent="@style/Widget.MaterialComponents.TextView">
        <item name="boxStrokeColor">@color/selector_text_input</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="hintTextColor">@android:color/white</item>
    </style>

    <style name="SKAppTheme.Widget.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">?attr/textAppearanceCaption</item>
        <item name="subtitleTextStyle">@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle
        </item>
    </style>

    <style name="SKAppTheme.TextAppearance.Widget.ActionBar.Title" parent="android:TextAppearance.Material.Widget.ActionMode.Title">
        <item name="textColor">@android:color/white</item>
    </style>

    <style name="SKAppTheme.TextAppearance.Widget.ActionBar.Subtitle" parent="android:TextAppearance.Material.Widget.ActionMode.Subtitle">
        <item name="textColor">@android:color/white</item>
    </style>

</resources>
